while True:
    augstums = int(input("Ievadiet eglītes augstumu: "))
    
    if augstums > 40:
        print("Eglītes augstums nevar būt lielāks par 40!")
    else:
        for i in range(augstums):
            print(" " * (augstums - i - 1), end="")
            print("*" * (2 * i + 1))
        break 


